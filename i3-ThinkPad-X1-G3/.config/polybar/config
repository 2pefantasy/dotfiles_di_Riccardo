[module/weather]
type = custom/script
interval = 600
;format-prefix = "ROMA  "
format-prefix-foreground = ${colors.foreground-alt}
format = "<label>"
exec = ~/.config/polybar/polybar-forecast
exec-if = ping openweathermap.org -c 1

